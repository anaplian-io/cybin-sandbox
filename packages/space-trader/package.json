{
  "name": "@anaplian/space-trader",
  "version": "0.1.0",
  "description": "A terminal-based space trader game",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "whale-song": "dist/index.js"
  },
  "scripts": {
    "bundle": "esbuild src/index.tsx --outfile=dist/index.js --platform=node --bundle --target=node22 --format=esm --minify",
    "build": "tsc --noEmit && npm run bundle",
    "test": "jest --coverage",
    "clean": "rm -rf dist coverage",
    "lint": "eslint src && prettier --check src",
    "start": "node dist/index.js"
  },
  "keywords": [
    "game",
    "terminal"
  ],
  "author": "Ethan Fortner",
  "license": "MIT",
  "devDependencies": {
    "@types/ink": "^0.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "esbuild": "^0.27.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6"
  },
  "dependencies": {
    "ink": "^6.8.0",
    "react": "^19.2.4",
    "react-devtools-core": "^7.0.1"
  }
}
